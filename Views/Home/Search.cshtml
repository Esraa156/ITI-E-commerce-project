@model List<Product>

<h2>Search Results</h2>

@if (Model.Count > 0)
{

    <div class="container">
        <h3 class="display-4">All products </h3>
        <div class="row">

            @foreach (var book in Model)
            {
                <div class="col-md-4">
                    <partial name="_product" model="@book" />
                </div>
            }

        </div>
    </div>
}
else
{
    <p>No products found.</p>
}